{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    // "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@app/common/*": ["common/*"],
      "@app/data/*": ["data/*"],
      "@app/services/*": ["services/*"],
      "@app/server/*": ["server/*"],
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/type"],
    "types": ["reflect-metadata", "jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": [
    "src/**/*",
    "./src/type/index.d.ts",
    "migrations",
    "src/data/base"
  ]
}
